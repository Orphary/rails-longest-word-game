<h1>New Game</h1>

<div class="container">
  <% @letters.each do |letter| %>
  <div class="btn btn-primary flex-row d-inline m-1"><%= letter %></div>
  <% end %>
</div>

  <form class="form-inline mt-3" action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group mx-sm-3 mb-2">
      <label for="word">What is the longest word you can find</label>
      <input class="form-control" type="text" name="word">
      <%= hidden_field_tag :letters, @letters %>
    </div>
    <button class="btn btn-primary" type="submit" value="play">Play</button>
  </form>
